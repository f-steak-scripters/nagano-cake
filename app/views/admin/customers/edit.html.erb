<div class="p-5 mx-5">

  <p style="background-color:#DDDDDD;" class="text-center col-auto p-2 d-inline-block">
    <%= @customer.last_name%><%= @customer.first_name %>さんの会員詳細
  </p>
  <br>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
    <table height="500" class="my-2">
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%=f.text_field :last_name, :placeholder => "令和"%>　<%=f.text_field :first_name, :placeholder => "道子"%></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%=f.text_field :last_name_katakana, :placeholder => "レイワ"%>  <%=f.text_field :first_name_katakana, :placeholder => "ミチコ"%></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%=f.text_field :post_code, :placeholder => "0000000"%></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address,class:"col-lg-10", placeholder: "東京都渋谷区代々木神園町0-0" %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number, pattern: "[0-9]{10,11}", placeholder: "0000000000" %></td>
      </tr>
      <tr>
        <td class="pr-5">メールアドレス</td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com"%></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <%= f.radio_button :is_deleted, false %>有効　<%= f.radio_button :is_deleted, true %>退会
        </td>
      </tr>
      <tr>
        <td></td>
        <td height="150">
          <%= f.submit "変更を保存", class: "btn btn-success", style: 'width: 150px; margin-right: 50px;' %>
        </td>
      </tr>
    </table>
  <% end %>


</div>