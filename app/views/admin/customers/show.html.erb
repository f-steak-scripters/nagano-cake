<div class="p-5 mx-5">

  <p style="background-color:#DDDDDD;" class="text-center col-auto p-2 d-inline-block">
    <%= @customer.last_name%><%= @customer.first_name %>さんの会員詳細
  </p>
  <br>

  <table height="300">
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.last_name_katakana %>  <%= @customer.first_name_katakana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.post_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td class="pr-5">メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <% if @customer.is_deleted == false %>
        <td class="text-success">有効</td>
      <% else %>
        <td class="text-black-50">退会</td>
      <% end %>
    </tr>

    <tr>
      <td></td>
      <td>
        <%= link_to "編集する", edit_admin_customer_path(@customer.id),class: "btn btn-success btn-sm mr-5" %>
        <%= link_to "注文履歴一覧を見る",'/admin',class: "btn btn-primary btn-sm" %>
      </td>
    </tr>
  </table>
</div>