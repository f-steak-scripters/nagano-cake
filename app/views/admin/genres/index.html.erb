<h4>ジャンル一覧・追加</h4>

<%= form_for(@genre, url: admin_genres_path) do |f| %>
  <p>ジャンル名
  <%= f.text_field :name %>
  <%= f.submit "新規登録", class: "btn btn-success" %></p>
<% end %>

<div class="row">
    <div class="col-md8">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
        </tbody>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>