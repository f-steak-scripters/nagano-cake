<div class="container p-5">

  <p style="width: 130px; background-color:#DDDDDD;" class="text-center">注文履歴一覧</p>
  <br>

  <table class="table mx-auto">

    <thead class="thead-light">
      <tr>
        <th class="col-1">購入日時</th>
        <th class="col-1">購入者</th>
        <th class="col-1">注文個数</th>
        <th class="col-1">注文ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @order.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id) do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            <% end %>
          </td>
          <td>
            <%= order.name %>
          </td>
          <td>
            <% total_quantity = 0 %>
            <% order.order_details.each do |order_details| %>
              <% total_quantity += order_details.quantity %>
            <% end %>
            <%= total_quantity %>
          </td>
          <td>
            <%= order.status %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>