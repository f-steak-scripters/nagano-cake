<div class='container my-3'>
  <div class='row'>
    <div>
      <h4 class="title ml-5 bg-light">商品一覧</h4>
    </div>
  </div>
  
  <div class='row'>
    <div class="col-md-8 mx-auto">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <!--<td><%= link_to item.name, admin_item_path(item) %></td>-->
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.is_sales ? "販売中" : "売切れ" %></td>
            <!--<td><%= item.is_sales %></td>-->
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>