<div class="container mt-5">

  <p style="width: 130px; background-color:#DDDDDD;" class="text-center offset-md-1">会員情報登録</p>
  <br>
  <%= form_with model: @customer, url: '/customer', method: :patch do |f| %>
    <table height="350" class="my-2">
      <tr>
        <td>氏名</td>
        <td><%=f.text_field :last_name, :placeholder => "令和"%>　<%=f.text_field :first_name, :placeholder => "道子"%></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%=f.text_field :last_name_katakana, :placeholder => "レイワ"%>　<%=f.text_field :first_name_katakana, :placeholder => "ミチコ"%></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%=f.text_field :post_code, :placeholder => "0000000"%></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address,class:"col-lg-10", placeholder: "東京都渋谷区代々木神園町0-0" %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number, pattern: "[0-9]{10,11}", placeholder: "0000000000" %></td>
      </tr>
      <tr>
        <td class="pr-5">メールアドレス</td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com"%></td>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= f.submit "編集内容を保存", class: "btn btn-success", style: 'width: 250px; margin-right: 50px;' %>
          <%= link_to "退会する", '/customer/leave', class: "btn btn-danger ml-5" %>
        </td>
      </tr>
    </table>
  <% end %>
</div>