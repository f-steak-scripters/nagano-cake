<h4><span class="bg-light">配送先編集</span></h4>
<%= form_with(model: @delivery, url: delivery_path(@delivery.id), method: :patch) do |form| %>
  <div class="form-group row">
    <div class="col-lg-4">
    <%= form.label :post_code, '郵便番号' %>
    </div>
    <div class="col-lg-4">
    <%= form.text_field :post_code, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-lg-4">
    <%= form.label :address, '住所' %>
    </div>
    <div class="col-lg-8">
    <%= form.text_field :address, class: 'form-control col-lg-10' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-lg-4">
    <%= form.label :name, '宛名' %>
    </div>
    <div class="col-lg-4">
    <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="col-lg-4">
      <%= form.submit '保存', class: 'btn btn-primary' %>
    </div>
  </div>


<% end %>