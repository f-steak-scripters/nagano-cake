<div class="container m-5">
<h4>商品一覧</h4><p>(全<%= @items.count %>件)</p>
<% @items.each do |item| %>
<div class="row mt-5">
  <%= link_to item_path(item.id) do %>
   <div class="col-">
      <%= image_tag item.get_image(180, 120) %>
      <p><%= item.name %></p>
      <p><%= item.price %></p>
   </div>
  <% end %>
</div>
<% end %>
</div>