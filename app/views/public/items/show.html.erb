<div class="container m-5">
  <div class="row">
    <div class="col-6">
      <%= image_tag @item.image %>
    </div>
    
    <div class="col-6">
      <h4><%= @item.name %></h4>
      <p><%= @item.description %></p>
      <h6><%= @item.price %></h6>
      <%= f.select :quantity, *[1..10], min: 0, include_blank: '個数選択' %>
      <%= f.submit "カートに入れる", class: "btn btn-success" %>
    </div>
    
  </div>
</div>